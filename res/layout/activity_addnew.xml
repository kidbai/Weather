<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Addnew" 
    android:orientation="vertical"
    android:background="@drawable/weatherbackgroud">

    <TextView
        android:id="@+id/tv_ctime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="当前时间" />

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="主题"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ed_title"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"
        android:ems="10" 
        android:hint="键入主题">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地点" 
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ed_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"
        android:hint="地点" />

    <TextView
        android:id="@+id/tv_pdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计划日期" 
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/ed_pdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"
        android:hint="计划日期2015-01-01" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ed_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"
        android:hint="备注" />

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_rtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提醒时间" 
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/tp_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/remind_bu"/>
    </LinearLayout>

    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>