<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/huanglan"
    android:id="@+id/weatherlayout2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Weather_nextPageActivity" >

   
    
    <TextView
        android:id="@+id/tv_city_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:text="成都" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="第三日"
        android:textColor="#ffffff"
       android:textSize="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="第四日"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_city_temp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_city_temp2"
        android:layout_alignBottom="@+id/tv_city_temp2"
        android:layout_centerHorizontal="true"
        android:text="10℃"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="明日"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_city_temp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="19dp"
        android:text="10℃"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_city_temp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_city_temp3"
        android:layout_alignBottom="@+id/tv_city_temp3"
        android:layout_alignRight="@+id/textView3"
        android:text="10℃"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_city_name1"
        android:layout_alignLeft="@+id/tv_city_temp2"
        android:layout_marginBottom="90dp"
        android:text="今日出行建议"
        android:textColor="#ffffff"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tv_city_index_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="30dp"
        android:text="TextView" 
        android:textColor="#ffffff"
        android:textSize="14dp"/>

    <ImageView
        android:id="@+id/img_city_temp2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/tv_city_temp2"
        android:layout_marginTop="16dp"
        android:src="@drawable/sunny" />

    <ImageView
        android:id="@+id/img_city_temp3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/tv_city_temp3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/sunny" />

    <ImageView
        android:id="@+id/img_city_temp4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignRight="@+id/tv_city_temp4"
        android:layout_alignTop="@+id/img_city_temp3"
        android:src="@drawable/yin" />

</RelativeLayout>